<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.easycms.entity.CmsOrgLegProject">
    <!-- 插入操作 -->
	<insert id="add" parameterType="orgLegProject">
	    insert into org_leg_proj(uid, start_time, end_time, title, intro) values(#{uid}, #{start_time, jdbcType=DATE, javaType=java.util.Date}, #{end_time, jdbcType=DATE, javaType=java.util.Date}, #{title}, #{intro})
	</insert>
	
	<resultMap type="orgLegProject" id="orgLegProjectMap">
	<id property="uid" column="uid" />
	<result property="start_time" column="start_time" javaType="java.util.Date" jdbcType="DATE"></result>
	<result property="end_time" column="end_time" javaType="java.util.Date" jdbcType="DATE"></result>
	<result property="title" column="title"></result>
	<result property="intro" column="intro"></result>
	</resultMap>
	
	<select id="findById" resultMap="orgLegProjectMap" parameterType="long">
	  select 
	  	*
	  from 
	  	org_leg_proj
	  where 
	  	uid=#{id}
	</select>
	
	<update id="update" parameterType="orgLegProject">
	  update org_leg_proj set start_time=#{start_time, jdbcType=DATE, javaType=java.util.Date}, end_time=#{end_time, jdbcType=DATE, javaType=java.util.Date}, title=#{title}, intro=#{intro} where uid=#{uid}
	</update>
	
	<select id="findByKey" resultType="orgLegProject" parameterType="map">
	  select * from org_leg_proj 
	  <where>
	    
	    
	  </where>
	  order by uid desc limit #{showPages},#{pageSize} 
	</select>

	<select id="findByKeyTotal" resultType="int" parameterType="map">
	  select count(*) from org_leg_proj 
	  <where>
	    
	  </where>
	</select>
	
	<!-- 删除操作 -->
	<delete id="delete" parameterType="long">
	  delete from org_leg_proj where uid=#{id}
	</delete>
</mapper>    